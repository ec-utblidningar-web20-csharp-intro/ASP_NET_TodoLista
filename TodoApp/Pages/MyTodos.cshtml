@page
@model TodoApp.Pages.MyTodosModel
@{
    Layout = "";

    List<Models.Todo> todos = new List<Models.Todo>()
    {
        new Models.Todo() { Action = "Köpa mjölk" },
        new Models.Todo() { Action = "Vattna blommorna", IsDone=true },
        new Models.Todo() { Action = "Gå ut med hunden", IsDone=true },
        new Models.Todo() { Action = "Skriva inlämningsrapporten" },
    };
}


<!-- vi vill visa en lista med ToDos! -->
<!--
    - Köpa mjölk
    - Vattna blommorna ✓
    - Gå ut med hunden ✓
    - Skriva inlämningsrapporten
-->

<ul>
    @for (int i = 0; i < 4; i++)
    {
        Models.Todo todo = todos[i];
        <li>@todo.Action @(todo.IsDone ? "✓" : "")</li>
    }
</ul>

<style>
    .hlist {
        display: flex;
        width: 100%;
        padding: 0;
        margin: 0;
    }
    .hlist li {
        list-style-type: none;
        padding: 5px;
    }
</style>
