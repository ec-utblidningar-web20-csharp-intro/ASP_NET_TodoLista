@page
@model TodoApp.Pages.TodosModel

@{
    ViewData["Title"] = "Todos";
    Layout = "";
}

<h1>Todos</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Action
            </th>
            <th>
                IsDone
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Todo) {
        <tr>
            <td>
                @item.Action
            </td>
            <td>
                @(item.IsDone ? "✔" : "")
            </td>
            <td>
                <!--<a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |-->
                <a asp-page="./DeleteTodo" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
