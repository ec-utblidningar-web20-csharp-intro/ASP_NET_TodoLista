@page
@model TodoApp.Pages.DeleteTodoModel

@{
    ViewData["Title"] = "DeleteTodo";
}

<h1>DeleteTodo</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Todo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Action
        </dt>
        <dd class="col-sm-10">
            @Model.Todo.Action)
        </dd>
        <dt class="col-sm-2">
            IsDone
        </dt>
        <dd class="col-sm-10">
            @Model.Todo.IsDone)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Todo.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Todos">Back to List</a>
    </form>
</div>
